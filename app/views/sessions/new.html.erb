<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card" style="width: 100%; max-width: 400px;">
    <div class="card-header text-center">
      <h4>Log In</h4>
    </div>

    <div class="card-body">
      <%= form_with(url: session_path, method: :post, class: "form") do |form| %>
        <% if flash[:alert] %>
          <div class="alert alert-danger">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :email, "Email", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true, placeholder: "Enter your email", name: "session[email]" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, class: "form-control", required: true, placeholder: "Enter your password", name: "session[password]" %>
        </div>

        <div class="d-flex justify-content-center">
          <%= form.submit "Log In", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>

    <div class="card-footer text-center">
      <p>Don't have an account? <%= link_to "Sign Up", new_user_path %></p>
    </div>
  </div>
</div>
